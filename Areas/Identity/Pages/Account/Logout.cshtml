@page
@model LogoutModel
@{
    Layout = null;
    ViewData["Title"] = "Cerrar Sesión";
}

<body class="text-center py-5">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <div class="card shadow-sm mx-auto" style="max-width: 400px;">
            <div class="card-body">
                <p class="mb-4">¿Estás seguro de que deseas cerrar sesión?</p>
                <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                    <button type="submit" class="btn btn-danger w-100">Cerrar Sesión</button>
                </form>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-success mx-auto" style="max-width: 400px;">
            Has cerrado sesión exitosamente.
        </div>
    }
</body>