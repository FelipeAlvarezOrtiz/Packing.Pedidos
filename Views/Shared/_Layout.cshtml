<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Packing Pedidos</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.lineicons.com/4.0/lineicons.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">
</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="wrapper">
            <aside id="sidebar">
                <div class="d-flex">
                    <button class="toggle-btn" type="button">
                        <i class="lni lni-grid-alt"></i>
                    </button>
                    <div class="sidebar-logo">
                        <a asp-action="Index" asp-controller="Home">Packing</a>
                    </div>
                </div>
                <ul class="sidebar-nav">
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                           data-bs-target="#productos" aria-expanded="false" aria-controls="productos">
                            <i class="lni lni-cog"></i>
                            <span>Configuraciones</span>
                        </a>
                        <ul id="productos" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                            <li class="sidebar-item">
                                <a asp-controller="Configuraciones" asp-action="ProductosIndex" class="sidebar-link">Productos</a>
                            </li>
                            <li class="sidebar-item">
                                <a href="#" class="sidebar-link">Presentaciones</a>
                            </li>
                            <li class="sidebar-item">
                                <a href="#" class="sidebar-link">Formatos</a>
                            </li>
                            <li class="sidebar-item">
                                <a href="#" class="sidebar-link">Grupos</a>
                            </li>
                        </ul>
                    </li>
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                           data-bs-target="#auth" aria-expanded="false" aria-controls="auth">
                            <i class="lni lni-protection"></i>
                            <span>Autenticación</span>
                        </a>
                        <ul id="auth" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                            <li class="sidebar-item">
                                <a asp-controller="Usuarios" asp-action="EmpresasIndex" class="sidebar-link">Empresas</a>
                            </li>
                            <li class="sidebar-item">
                                <a asp-controller="Usuarios" asp-action="ListaUsuarios" class="sidebar-link">Usuarios</a>
                            </li>
                        </ul>
                    </li>
                    <li class="sidebar-item">
                        <a asp-controller="Pedidos" asp-action="Index" class="sidebar-link">
                            <i class="lni lni-layout"></i>
                            <span>Pedidos</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link">
                            <i class="lni lni-popup"></i>
                            <span>Notificaciones</span>
                        </a>
                    </li>
                </ul>
                <div class="sidebar-footer">
                    <a class="sidebar-link" data-bs-toggle="modal" data-bs-target="#logoutModal">
                        <i class="lni lni-exit"></i>
                        <span>Logout</span>
                    </a>
                </div>
            </aside>
            <div class="main">
                <nav class="navbar navbar-expand px-4 py-3 shadow">
                    <div class="container-fluid">
                        <div class="collapse navbar-collapse justify-content-end">
                            <ul class="navbar-nav">
                                <li class="nav-item dropdown">
                                    <a href="#" class="nav-link dropdown-toggle d-flex align-items-center"
                                       id="navbarDropdown" role="button"
                                       data-bs-toggle="dropdown" aria-expanded="false">
                                        <img src="~/img/account.png" class="avatar rounded-circle" style="width: 30px; height: 30px;" alt="Account">
                                        <span class="ms-2">Mi Cuenta</span>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                        <li><a class="dropdown-item" href="#"><i class="lni lni-user me-2"></i>Perfil</a></li>
                                        <li><a class="dropdown-item" href="#"><i class="lni lni-cog me-2"></i>Configuración</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <a class="dropdown-item text-danger" data-bs-toggle="modal" data-bs-target="#logoutModal">
                                                <i class="lni lni-exit me-2"></i>Cerrar sesión
                                            </a>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
                <main role="main" class="px-3 mt-2 pb-3">
                    @RenderBody()
                </main>
                <footer class="footer">
                    <div class="container-fluid">
                        <div class="row text-body-secondary">
                            <div class="col-6 text-start ">
                                <a class="text-body-secondary" href="https://www.neonexus.cl">
                                    Desarrollado por <strong>NeoNexus</strong>
                                </a>
                            </div>
                            <div class="col-6 text-end text-body-secondary d-none d-md-block">
                                <ul class="list-inline mb-0">
                                   @*  <li class="list-inline-item">
                                        <a class="text-body-secondary" href="#">Contact</a>
                                    </li>
                                    <li class="list-inline-item">
                                        <a class="text-body-secondary" href="#">About Us</a>
                                    </li> *@
                                    <li class="list-inline-item">
                                        <a class="text-body-secondary">&copy; 2025 Los Colonos Ltda. - Todos los derechos reservados.</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
        </div>
        <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content shadow-lg rounded-4">
                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title fw-bold" id="logoutModalLabel">Cerrar Sesión</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body text-center">
                        <i class="bi bi-exclamation-triangle-fill text-warning fs-1 mb-3"></i>
                        <p class="fs-5">¿Estás seguro de que deseas cerrar sesión?</p>
                    </div>
                    <div class="modal-footer d-flex justify-content-center">
                        <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">Cancelar</button>
                        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                            <button type="submit" class="btn btn-danger px-4">Cerrar Sesión</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        @RenderBody()
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true" defer></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
